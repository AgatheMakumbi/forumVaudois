CREATE TABLE User (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    username TEXT NOT NULL UNIQUE,
    email TEXT NOT NULL UNIQUE,
    password TEXT NOT NULL,
    created_at DATETIME DEFAULT CURRENT_TIMESTAMP,
    token TEXT,
    isBlocked BOOLEAN DEFAULT 0,
    isVerified BOOLEAN DEFAULT 0
);

-- Table des villes
CREATE TABLE City (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    city_name TEXT NOT NULL
);

-- Table des catégories
CREATE TABLE Category (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    category_name TEXT CHECK(category_name IN ('food', 'activity', 'nature', 'culture')) NOT NULL
);

-- Table des posts
CREATE TABLE Post (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    id_user INTEGER NOT NULL,
    id_city INTEGER NOT NULL,
    id_category INTEGER NOT NULL,
    title TEXT NOT NULL,
    text TEXT NOT NULL,
    budget REAL,
    address TEXT,
    created_at DATETIME DEFAULT CURRENT_TIMESTAMP,
    last_update DATETIME DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (id_user) REFERENCES User(id) ON DELETE CASCADE,
    FOREIGN KEY (id_city) REFERENCES City(id),
    FOREIGN KEY (id_category) REFERENCES Category(id)
);

-- Table des médias
CREATE TABLE Media (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    id_user INTEGER NOT NULL,
    file_path TEXT NOT NULL,
    upload_date DATETIME DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (id_user) REFERENCES User(id) ON DELETE CASCADE
);

-- Table de jonction Media-Post (permet à un média d'appartenir à plusieurs posts)
CREATE TABLE PostMedia (
    id_post INTEGER,
    id_media INTEGER,
    PRIMARY KEY (id_post, id_media),
    FOREIGN KEY (id_post) REFERENCES Post(id) ON DELETE CASCADE,
    FOREIGN KEY (id_media) REFERENCES Media(id) ON DELETE CASCADE
);

-- Table des commentaires
CREATE TABLE Comment (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    id_user INTEGER NOT NULL,
    id_post INTEGER NOT NULL,
    text TEXT NOT NULL,
    created_at DATETIME DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (id_user) REFERENCES User(id) ON DELETE CASCADE,
    FOREIGN KEY (id_post) REFERENCES Post(id) ON DELETE CASCADE
);

-- Table des likes
CREATE TABLE `Like` (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    id_user INTEGER NOT NULL,
    id_post INTEGER NOT NULL,
    UNIQUE(id_user, id_post), -- Un utilisateur ne peut liker un post qu'une fois
    FOREIGN KEY (id_user) REFERENCES User(id) ON DELETE CASCADE,
    FOREIGN KEY (id_post) REFERENCES Post(id) ON DELETE CASCADE
);

